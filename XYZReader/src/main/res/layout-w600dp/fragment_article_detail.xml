<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ArticleDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_details_collapsing_toolbar_height"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/article_details_imageView_height"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                tools:src="@drawable/second_variety_image" />

            <RelativeLayout
                android:id="@+id/viewHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/article_details_viewHeader_height"
                android:layout_gravity="bottom"
                android:background="?attr/colorPrimary">

                <TextView
                    android:id="@+id/textViewSubTitle"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    tools:text="Jan 1, 1820 by Washington Irving" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"
                app:navigationIcon="?attr/homeAsUpIndicator">

                <TextView
                    android:id="@+id/textViewToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:visibility="invisible"
                    tools:text="The Legend of Sleepy Hollow"
                    tools:visibility="visible" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_1"
        android:layout_marginTop="@dimen/article_details_textViewTitle_marginTop"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textColor="#FFF"
        android:textSize="26sp"
        app:collapsed_title_marginStart="@dimen/keyline_2"
        app:collapsed_y="@dimen/article_details_viewHeader_height"
        app:expanded_y="@dimen/article_details_collapsing_toolbar_height"
        app:layout_behavior="com.example.xyzreader.ui.ArticleDetailsHeaderBehavior"
        app:shrinkAtPercent="0.2"
        tools:layout_gravity="center_horizontal"
        tools:layout_width="500dp"
        tools:paddingStart="8dp"
        tools:text="The Legend of Sleepy Hollow" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/viewHeaderBeneath"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/colorPrimary" />

            <android.support.v7.widget.CardView
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />

                <TextView
                    android:id="@+id/textViewBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/loading_please_wait"
                    android:textSize="@dimen/webview_text_size" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>